		<script>
			$(function() {
                // 아티클 사용자 화면크기 비례 높이
                var x = $(window).height();
                $("article").css("height",x);

                var mainimgheight = $("#mainimg").height();
                $("#mainimg").css("top",(x/2)-(mainimgheight/2));

                // 사이드메뉴 위치 지정
                var y = $("#sidemenubar").height();
                $("#sidemenubar").css("top",(x/2)-(y/2));

                // 사이드메뉴 베이스 위치 지정
                var z = $("#sidemenubarbase").height();
                $("#sidemenubarbase").css("top",(x/2)-(z/2));

                var a = $("#menubox").height();
                $("#menubox").css("top",(x/2)-(a/2));

			});

            function hideshow(e) {
                if ( e.wheelDelta < 0 ) {
                    document.querySelector("header").style.top = "-60px";
                }
                else {
                    document.querySelector("header").style.top = "0px";
                }
            }


            // 상품 article 썸네일 자동입력
            function inputs() {
                var subject = ["single", "blended", "coldbrew"] ;

                var num = 0 ;
                var index ;

                while(num < subject.length) {
                    for (index = 1 ; index <= 5 ; index++) {
                        var kind = subject[num] ;
                        var selector = "#"+kind+index ;

                        var urlText = "url(image/product/bg-"+kind+".png), url(image/product/"+kind+index+".png)" ;

                        document.querySelector(selector).style.backgroundImage = urlText ;
                    }
                    num++ ;
                }
            }
            // 박스 팝업 이벤트

            function boxUnerBottom(evnt, startevent) {
                var top = evnt.getBoundingClientRect().top;
                var innerHeight = window.innerHeight;
                return top > innerHeight + (startevent || 0);
            }

            function scrollEvent() {
                var elmt = document.querySelectorAll(".scrollevnt");
                elmt.forEach(function(evnt){
                    if(boxUnerBottom(evnt, -30)) {
                        evnt.style.opacity = "0";
                        evnt.style.transform = "translateY(80px)";
                    }
                    else {
                        evnt.style.opacity = "1";
                        evnt.style.transform = "translateY(0px)";
                    }
                });
            }
            window.addEventListener("scroll",scrollEvent);
		</script>
